<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta charset="UTF-8">
  </head>
  <body>
      <div class="container text-center">
          <div class="container-fluid">
              <h1 class="page-header"><%= title %></h1>
              <p>Welcome to <%= title %></p>
          </div>
          <div class="container-fluid">
              <h2 class="page-header">Status</h2>
              <div class="row">
                <div class="col-md-4 panel panel-default panel-body" id="distance"><%= distance %></div>
                <div class="col-md-4 panel panel-default panel-body">lorem ipsum</div>
                <div class="col-md-4 panel panel-default panel-body">lorem ipsum</div>
              </div>
          </div>
          <div class="container-fluid">
              <h2 class="page-header">Controlls</h2>
              <div class="panel panel-default panel-body"><p id="messages"></p></div>
              <button class="btn btn-primary btn-lg">Give me Coffee!</button>
          </div>
      </div>
    <script>
      var output = document.getElementById("messages");
      var client = mqtt.connect('ws://iot.eclipse.org:80/ws'); // you add a ws:// url here
      client.subscribe("coffeefy/messages");
      client.on("message", function(topic, payload) {
        output.innerHTML = payload;
      });
      client.publish("coffeefy", "hi, this is browser!");
    </script>
  </body>
</html>
