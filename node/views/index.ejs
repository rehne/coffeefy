    <script>


    var output_messages = document.getElementById("messages");
    var output_status = document.getElementById("status");
    var output_heattime = document.getElementById("heattime");
    var client = mqtt.connect('<%= address %>');
    var active = <%= status %>;
    if(active == 1){
      $('.progress-button').prop('disabled', true);
      $('.progress-button-big').prop('disabled', true);
    } else {
      $('.progress-button').prop('disabled', false);
      $('.progress-button-big').prop('disabled', false);
    }
    client.subscribe("coffeefy/messages");
    client.subscribe("coffeefy/sensors/ultrasonic");
    client.subscribe("coffeefy/status");
    client.subscribe("coffeefy/heattime");
    client.on("message", function(topic, payload) {
      if (topic=="coffeefy/messages") {
        output_messages.innerHTML = payload;
      }
      if (topic=="coffeefy/status") {
        // output_status.innerHTML = payload;
        $(document).ready(function(){
          if(payload == 1){
            active = 1;
            $('.progress-button').prop('disabled', true);
            $('.progress-button-big').prop('disabled', true);
          } else {
            active = 0;
            $('.progress-button').prop('disabled', false);
            $('.progress-button-big').prop('disabled', false);
          }
        });
      }
      if (topic=="coffeefy/sensors/ultrasonic") {
        $(document).ready(function(){
          if(payload > 5 && active == 0){
            /*
            $('.progress-button').prop('disabled', true);
            $('.progress-button-big').prop('disabled', true);
            $('#distance').html(payload + 'CM | no Cup !');
            */
          } else if (payload <= 5 && active == 0) {
            /*
            $('.progress-button').prop('disabled', false);
            $('.progress-button-big').prop('disabled', false);
            $('#distance').html(payload + 'CM | OK');
            */
          }
        });
      }
      if (topic=="coffeefy/heattime") {
        $(document).ready(function(){
          if(active){
            $('#heattime').html('Heattime: ' + payload);
            var heattime = payload;
          }
        });
      }
    });


      //var heattime = $('#heattime').html();
      var stime;
      var btime;
      var progress;
      var videoFile;
      var temp = true;

      if (heattime = 80)
      {
        stime = -3.3;
        btime = -1.86;
      }
      if (heattime = 55)
      {
        stime = -2.29;
        btime = -1.25;
      }
      if (heattime = 35)
      {
        stime= -1.45;
        btime= -0.79;
      }
      if (heattime = 20)
      {
        stime = -0.83;
        btime= -0.45;
      }
      if (heattime = 10)
      {
        stime = -0.40;
        btime= -0.22;
      }


      [].slice.call( document.querySelectorAll( 'button.progress-button' ) ).forEach( function( bttn ) {
        progress = stime;
        new ProgressButton( bttn, {
          callback : function( instance ) {
            $.get("python/makeSmallCoffee/");
            progress, interval = setInterval( function() {
              progress = Math.min( progress + 0.5 * 0.1, 1 );
              instance._setProgress( progress );
              if (progress < 1)
              {
                $("button.progress-button-big .content").fadeTo(1000, 0.5);
                $("button.progress-button-big").prop("disabled", true);
              }
              if (progress < 0)
              {
                  $("button.progress-button .content").text("Heating Water");
              }
              if (progress < 1 && progress > 0)
              {
                if(temp == true)
                {
                  player = document.getElementById("player");
                  player.src = "./assets/coffee_small.mp4";
                  player.load();
                  player.play();
                  temp = false;
                }
                  $("button.progress-button .content").text("Brew Coffee");
              }
              if( progress === 1 ) {
                instance._stop(1);
                clearInterval( interval );
                    $("button.progress-button .content").text("Small Coffee");
                    $("button.progress-button-big .content").fadeTo(1000, 1);
                    $("button.progress-button-big").prop("disabled", false);
              }
            }, 1200 );
          }
        } );
      } );

      [].slice.call( document.querySelectorAll( 'button.progress-button-big' ) ).forEach( function( bttn ) {
        progress = stime;
        new ProgressButton( bttn, {
          callback : function( instance ) {
            $.get("python/makeBigCoffee/");
            progress, interval = setInterval( function() {
              progress = Math.min( progress + 0.5 * 0.1, 1 );
              instance._setProgress( progress );
              if (progress < 1)
              {
                $("button.progress-button .content").fadeTo(1000, 0.5);
                $("button.progress-button").prop("disabled", true);
              }
              if (progress < 0)
              {
                  $("button.progress-button-big .content").text("Heating Water");
              }
              if (progress < 1 && progress > 0)
              {

                if(temp == true)
                {
                  player = document.getElementById("player");
                  player.src = "./assets/coffee_big.mp4";
                  player.load();
                  player.play();
                  temp = false;
                }
                  $("button.progress-button-big .content").text("Brew Coffee");

              }

              if( progress === 1 ) {

                    $("button.progress-button-big .content").text("Small Coffee");
                    $("button.progress-button .content").fadeTo(1000, 1);
                    $("button.progress-button").prop("disabled", false);
                    instance._stop(1);
                    clearInterval( interval );
              }
            }, 2200 );
          }
        } );
      } );
    </script>
